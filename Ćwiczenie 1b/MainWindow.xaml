<Window x:Class="Ćwiczenie_1b.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ćwiczenie_1b"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="StartSimulationButton" Content="Start Symulacji" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Height="30" Margin="10,10,0,0" Click="StartSimulationButton_Click"/>

        <TextBox Name="NumberOfPointsTextBox" HorizontalAlignment="center" VerticalAlignment="center" Width="120" Height="30" Margin="10,100,0,0"/>

        <Label Name="PiValueLabel" Content="Szacowane Pi: 0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,180,0,0" />

        <Label Name="TimeLabel" Content="Czas obliczeń: 0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,250,0,0" />
    </Grid>
</Window>
